<view class="playing-status">
  
  <progress color="#dadada" stroke-width="2">
    <text class="playstate" style="left:{{percent}}%"></text>
    <text class="dpstate" style="width:{{percent}}%"></text>
    <slider bindchange="museek" color="#d33a31" left-icon="cancel" value="{{percent}}"/>
  </progress>
  
  <view class="btns">
    <view bindtap="player" data-name="{{item.name}}" wx:for="{{items}}">
      <image wx:if="{{item.name === 'stop'}}" src="{{playing ? stopUrl : playUrl}}" />
      <image wx:else src="{{item.img}}" />
    </view>
    <view bindtap="playInfo">
      <image src="{{songpic}}" />
      <text>{{name}}</text>
    </view>
  </view>
</view>
