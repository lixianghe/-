.playing-status {
  color: #fff;
  padding: 0 6vh;
  width: 100%;
  height: 13vh;
  background: #d9d9d9;
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.playing-status progress {
  display: flex;
  width: 100%;
  color: #000;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 4rpx;
}

.playing-status .playstate {
  position: absolute;
  display: block;
  height: 5rpx;
  width: 5rpx;
  overflow: hidden;
  background-color: #d33a31;
  border: 5rpx solid #fff;
  border-radius: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  z-index: 2
}

.dpstate {
  position: absolute;
  height: 2px;
  width: 0;
  background-color: #d33a31;
  overflow: hidden;
  left: 0;
  top: 50%;
  margin-top: -1px;
}

.playing-status .time {
  width: 80rpx;
  text-align: center;
  display: block;
  font-size: 24rpx;
}

.playing-status slider {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  margin: 0;
  opacity: 0;
  z-index: 10
}

/* 按钮样式 */
.playing-status .btns {
  display: flex;
}
.playing-status .btns view image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 30rpx;
  vertical-align: middle;
}
.playing-status .btns view text {
  color: #000;
  margin-left: -8rpx;
}