.playing-status {
  color: #fff;
  padding: 0 11vh;
  width: 100%;
  height: 17.3vh;
  background:#151515;
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.playing-status .progress {
  display: flex;
  width: 100%;
  color: #000;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 1vh;
}

