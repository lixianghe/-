.dpstate {
  position: absolute;
  height: 4px;
  width: 0;
  background-color: #fa6500;
  overflow: hidden;
  left: 0;
  top: 50%;
  margin-top: -1px;
}


.playing-status .slider {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  margin: 0;
  opacity: 0;
  z-index: 10
}

/* 按钮样式 */
.playing-status .btns {
  display: flex;
}
.playing-status .btns .image {
  width: 20vh;
  height: 14vh;
  vertical-align: middle;
}
.playing-status .btns .pic {
  width: 12.66vh;
  height: 12.66vh;
  border-radius: 1vh;
}
.playing-status .btns .view{
  display: flex;
  margin-right: 6.67vh;
  align-items: center;
  position: relative;
}
.playing-status .btns .text {
  color: #fff;
  margin-left: 7.32vh;
  font-size: 5.32vh;
}


.playing-status .btns .modal {
  width: 20vh;
  height: 14vh;
  border-radius: 7.5vh;
  background: #111111;
  opacity: 0.32;
  position: absolute;
  left: 0;
  top: 0;
}