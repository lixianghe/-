<view class="selectWorks" wx:if="{{isSelectWorks}}">
  <view class="contentWorks">
    <image class="closeWords" src="/images/close-words.png" bindtap="closeWords"></image>
    <view class="orders" bindtap="changeOrder">
      {{order ? '正序' : '倒序'}}排列
      <image class="orderIcon" src="/images/{{order ? 'icon_down' : 'icon_up'}}.png"></image>
    </view>
    <view class="worksList">
      <view 
        class="worksItem" 
        wx:for="{{data}}" 
        wx:key="index" 
        data-index="{{index}}"
        style="border: {{selected === index ? '0.35vh solid #ff6700' : 'none'}}; background-color: {{selected === index ? 'rgba(255,103,0,0.3)' : 'rgba(255,255,255,0.1)'}};flex: {{selected === index ? '0 0 42.4vh' : '0 0 43.1vh'}}; height: {{selected === index ? '14vh' : '14.7vh'}}"
        bindtap="selectThis"  
      >
        {{item.start}} ~ {{item.end}}
      </view>
    </view>
  </view>
</view>