.selectWorks {
  height: 100vh;
  width: 100vw;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
}
.contentWorks {
  position: relative;
  height: 303rpx;
  width: 80vw;
  padding: 15rpx 20rpx;
  background-color: #fff;
}
.worksList {
  height: 275rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: baseline;
  overflow: auto;
}
.closeWords {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 18rpx;
  height: 18rpx;
}
.orders {
  height: 10vh;
  flex: 0 0 100%;
}
.worksItem {
  /* flex: 0 0 78rpx; */
  font-size: 3vh;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 1vw;
  /* height: 29rpx; */
  border-radius: 5rpx;
  margin-bottom: 10rpx;
  background-color: #eeeeee;
} 