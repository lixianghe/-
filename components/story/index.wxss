.image-content[focus-select="true"][focus-line="true"]:before {
  content:"";
  position:absolute;
  width: calc(100% + 4vh);
  height: 0;
  padding-bottom: calc(100% + 4vh);
  border-radius: 2vh;
  vertical-align: bottom;
  box-shadow: inset 1.2vh 1.2vh #ffac2d, inset -1.2vh -1.2vh #ffac2d;
  transform: translate(-1.9vh, -1.9vh);
  left: 0;
  top: 0;
}

.image-content{
  margin-top: 2vh;
