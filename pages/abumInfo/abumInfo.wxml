<view class="page">
  <view class="btns">
    <button bindtap="playAll">播放全部</button>
    <button bindtap="changeProp">共{{Episode}}首</button>
  </view>
  <!-- 列表 -->
  <view class="list">
    <view class="songList">
      <view bindtap="goPlayInfo" style="color: {{index === current ? '#c64f31' : '#fff'}}" data-no='{{index}}' data-id='{{item.id}}' data-name='{{item.name}}' data-duration="{{item.dt}}" data-songpic="{{item.al.picUrl}}" data-url="{{item.url}}" data-pid="{{item.pid}}" data-dt="{{item.dt}}" wx:key="index" wx:for="{{canplay}}">
        <text>{{index + 1}}</text>
        <text>{{item.name}}</text>
        <text>{{item.formatDt}}</text>
      </view>
      
    </view>
    <view class="imgCard">
      <image src="{{src}}" />
    </view>
  </view>
  <selectWorks id="selectWorks" bindchangeWords="changeWords"> </selectWorks>
  <mini-player bindmyevent="barGoPlayInfo" name="{{name}}" data-no='{{index}}'  songpic="{{songpic}}" percent="{{percent}}"></mini-player>
</view>
  
