.page {
  width: 100%;
  height: 100%;
  background:#151515;
  /* padding: 5vh 8vh; */
  box-sizing: border-box;
  display: flex;
}
.page .left {
  width: 184vh;
  padding: 0vh 12.25vh  20vh;
  box-sizing: border-box;
  overflow: auto;
}
.page .right {
  /* width: 110.43vh; */
  flex: 1;
  display: flex;
  height: 82.7vh;
  justify-content: center;
  align-items: center;
}
.page .left .btns {
  display: flex;
  justify-content: flex-start;
  position: fixed;
  background: #151515;
  height: 21vh;
  align-items: center;
  width: 165vh;
}
.page .left .btns .playAll image {
  width: 10.64vh;
  height: 10.64vh;
  vertical-align: middle;
  margin-left: -3vh;
}
.page .left .btns .select image {
  width: 5.5vh;
  height: 5.5vh;
  vertical-align: middle;
  margin-left: 3vh;
}
.page .left .btns button {
  width: 37.74vh;
  height: 11.05vh;
  line-height: 11.05vh;
  font-size: 5vh;
  border-radius: 11vh;
  margin: 0;
  background: #272727;
  margin-right: 3vh;
  color: #fff;
}
.page .left .songList {
  /* width: 162vh; */
  font-size: 4.9vh;
  flex: 1;
  margin-top: 21vh;
}
.page .left .songList .playGif {
  width: 7.6vh;
  height: 7.6vh;
  margin-left: -5vh;
  vertical-align: middle;
  transform: translateX(2vh);
}
.page .left .songList view:nth-child(1) {
  margin-top: 5vh;
}
.page .left .songList view {
  margin-top: 6vh;
  height: 7.6vh;
  line-height: 7.6vh;
}
.page .left .songList view text:nth-child(1) {
  width: 7.6vh;
  display: inline-block;
  text-align: right;
  margin-left: -5vh;
}
.page .left .songList view text:nth-child(2) {
  margin-left: 7.35vh;
}
.page .left .songList view text:nth-child(3) {
  float: right;
}
.page .right .imgCard {
  padding-top: 18vh;
  padding-left: 6vh;
}
.page .right .image {
  width: 49vh;
  height: 49vh;
  border-radius: 3vh;
}
.playAllHover {
  background: #ff6100!important;
}

/* 骨架屏样式 */
.skeleton .songList view {
  /* background: yellow; */
  display: flex;
}
.skeleton .songList view text {
  display: inline-block;
  height: 100%;
  background: #272727;
  border-radius: 1vh;
}
.skeleton .songList view text:nth-child(1) {
  width: 10vh!important;
  margin-left: 0!important;
}
.skeleton .songList view text:nth-child(2) {
  /* width: 109vh; */
  flex: 1;
  margin-left: 4vh!important;
}
.skeleton .right .image {
  border-radius: 5vh;
  background: #272727;
}