<view class="{{screen}}">
  <scroll-view class="index" scroll-x="true" scroll-left="{{scrollLeft}}" lower-threshold="1920"bindscrolltolower="getLayoutData">
    <!-- 快捷入口 -->
    <view class="quickEntry" bindtap="tolatelyListen">
      <view class="quickEntrybox" style="height: 30.73vh" wx:for="{{lalyLtn}}" wx:key="index">
        <image class="quickEntryicon" src="{{ item.icon }}"></image>
        <view class="latelyLtnTit">{{ item.title }}</view>
      </view>
    </view>

    <view class="mianContent">
      <view class="label-view">
        <view class="title{{index === currentTap ? ' active-tap' : ''}}" wx:for="{{labels}}" wx:key="index"
          data-index="{{index}}"  data-groupid="{{item.id}}" bindtap="selectTap">
          <text>{{item.name}}</text>
        </view>
      </view>
      <!-- 页面盒子 -->
      <story wx:if="{{info.length>0 && retcode === 1}}" wx:for="{{info}}" wx:key="index" data-no="{{index}}"
        data-id="{{item.id}}" data-title="{{item.title}}" data-src="{{item.src}}" data-contentype="{{item.contentType}}" bindtap="linkAbumInfo"
        datasource="{{item}}" className="{{screen}}"></story>
    </view>
    <!-- 加载中盒子 -->
    <view class="albumCard" wx:if="{{info.length === 0 && retcode === 1}}" wx:for="{{5}}" wx:key="index">
      <view class="imgB bone"></view>
      <view class="albumTitB">
        <view class="tb bone"></view>
        <view class="tb bone"></view>
      </view>
    </view>
  </scroll-view>

  <bgConfirm id="bgConfirm" msg="{{confirm}}" confirm="确定" cancel=""></bgConfirm>
  <mini-player id="miniPlayer" songInfo="{{songInfo}}"></mini-player>
</view>