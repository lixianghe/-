<view class="index">
  <view class="latelyListen" style="background-image: url({{ lalyLtn.src }})" bindtap="tolatelyListen">
    <image src="{{ lalyLtn.icon }}"></image>
    <view class="latelyLtnTit">{{ lalyLtn.title }}</view>
  </view>
  <view class="albumCard" wx:for="{{info}}" wx:key="index" data-src="{{item.src}}" data-no="{{index}}" bindtap="linkAbumInfo">
    <image src="{{item.src}}"></image>
    <view class="albumTit">
      <text>{{ item.title }}</text>
    </view>
  </view>
  <mini-player></mini-player>
</view>



