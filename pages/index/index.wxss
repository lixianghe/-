.page {
  width: 100%;
  height: 100%;
  background: #272c3f;
  padding: 24rpx 0;
  box-sizing: border-box;
}
.page .page-title {
  color: #fff;
  font-size: 12rpx;
  text-align: center;
}
.page button {
  background: #f05223;
  color: #fff;
  width: 200rpx;
  font-size: 11rpx;
  border-radius: 5rpx;
}
.container {
  position: relative;
  height: 135rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  
}
.content {
  width: 14vw;
  height: 15vw;
  background: #272727;
  border-radius: 1.5vw;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content .img-card {
  width: 5vw;
  height: 5vw;
  border-radius: 1.5vw;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 18rpx;
}
.content .img-card image {
  width: 2.5vw;
  height: 2.5vw;
}
.content:nth-child(1) .img-card, .content:nth-child(2) .img-card {
  background: #d2d2ee;
}
.content:nth-child(3) .img-card, .content:nth-child(4) .img-card {
  background: #caeaec;
}
.content:nth-child(5) .img-card {
  background: #f2d9dc;
}
.content .content-title {
  color: #ffffff;
  font-size: 13rpx;
}