.page {
  width: 100%;
  height: 100%;
  background: #272c3f;
  padding: 0 25rpx;
  display: flex;
  color: #fff;
}
.page .playLeft {
  width: 500rpx;
  padding-top: 80rpx;
}
.page .playLeft .title {
  font-size: 13rpx;
}
.page .playLeft .player {
  margin-top: 65rpx;
  padding-right: 55rpx;
  position: relative;
}
.page .playLeft .player slider {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  margin: 0;
  opacity: 0;
  z-index: 10
}
.page .playLeft .player progress {
  position: relative;
}

.page .playLeft .player .time {
  position: absolute;
  left: 0;
  top: 25rpx;
}

.page .playLeft .player .duration {
  position: absolute;
  right: 50rpx;
  top: 25rpx;
}

.page .playLeft .btns {
  display: flex;
  margin-top: 100rpx;
}
.page .playLeft image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 115rpx;
}
.page .playRight {
  height: 100%;
  display: flex;
  align-items: center;
}

#playstate {
  position: absolute;
  display: block;
  height: 5rpx;
  width: 5rpx;
  overflow: hidden;
  background-color: #d33a31;
  border: 5rpx solid #fff;
  border-radius: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  z-index: 2
}

#dpstate {
  position: absolute;
  height: 2px;
  width: 0;
  background-color: #d33a31;
  overflow: hidden;
  left: 0;
  top: 50%;
  margin-top: -1px;
}
