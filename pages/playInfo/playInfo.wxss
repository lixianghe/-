.page {
  width: 100%;
  height: 100%;
  background: #151515;
  display: flex;
  color: #fff;
  box-sizing: border-box;
}
.page .playLeft {
  width: 193vh;
  padding: 15.3vh 12vh 16vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.page .playLeft .title {
  font-size: 6.7vh;
}
.page .playLeft .player {
  margin-top: 14.7vh;
  position: relative;
}
.page .playLeft .player .slider {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  margin: 0;
  opacity: 0;
  z-index: 10;
}
.page .playLeft .player .progress {
  position: relative;
}
.wx-progress-bar {
  border-radius: 8px;
}

.page .playLeft .player .time {
  position: absolute;
  left: 0;
  top: 3.6vh;
  font-size: 4.3vh;
  color: #696969;
}

.page .playLeft .player .duration {
  position: absolute;
  right: 0vh;
  top: 3.6vh;
  font-size: 4.3vh;
  color: #696969;
}

.page .playLeft .btns {
  display: flex;
  margin-top: 15vh;
  height: 15.5vh;
  justify-content: space-around;
  align-items: center;
}
.page .playLeft .btns > view {
  position: relative;
}
.page .playLeft .btns .modal {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 21.5vh;
  height: 21.5vh;
  background: #000;
  opacity: 0.35;
  border-radius: 50%;
}
.page .playLeft image {
  width: 15.3vh;
  height: 15.3vh;
}
.page .playRight {
  height: 100%;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}
.page .playRight image {
  width: 55vh;
  height: 55vh;
  border-radius: 2vh;
}

#playstate {
  position: absolute;
  display: block;
  height: 5.2vh;
  width: 5.2vh;
  overflow: hidden;
  /* background-color: #ff6100; */
  border-radius: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  z-index: 2;
}

#dpstate {
  position: absolute;
  height: 1.24vh;
  width: 0;
  /* background-color: #ff6100; */
  overflow: hidden;
  left: 0;
  top: 50%;
  margin-top: -0.62vh;
  border-radius: 8px
}

/* 大于1/2的情况 */
.page .songDc {
  width: 100%;
}
.page .songDc .songDcTitle {
  display: flex;
  align-items: center;
}
.page .songDc .songDcTitle image {
  width: 23vh;
  height: 23vh;
  border-radius: 2vh;
  margin-right: 7.7vh;
}
.page .songDc .player {
  margin-top: 14vh;
}

/* 弹出的播放列表 */
.playList {
  position: fixed;
  background: #222222;
  left: 0;
  top: 0;
  width: 180vh;
  height: 100%;
  z-index: 999;
  padding: 0 10.5vh 5.5vh;
  overflow: auto;
  transform: translateX(-180vh);
}
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.6;
}
.playList .songList {
  width: 163vh;
  padding: 1.5vh;
}
.playList .songList .view {
  margin-bottom: 4.3vh;
  color: #fff;
  overflow: hidden;
  border-bottom: 1px solid #2d2d2d;
  height: 13vh;
  padding: 2vh 2.42vh 4.4vh 5vh;
}
.playList .songList .view text:nth-child(1) {
  width: 8vh;
}
.playList .songList .view:last-child {
  margin-bottom: 0;
}
.playList .songList text {
  font-size: 4.9vh;
  margin-right: 2.4vh;
  float: left;
}
.playList .songList text:nth-child(3) {
  float: right;
  margin-right: 0;
}
.playList button {
  border: none;
  border-top: 1px solid #ddd;
  background: #eaeaea;
}
.playList button::after {
  content: none;
}
.playList .title {
  display: flex;
  color: #fff;
  font-size: 6.1vh;
  display: flex;
  justify-content: space-between;
  margin-bottom: 5.1vh;
  padding: 8vh 1.5vh 0;
  position: fixed;
  width: 160vh;
  top: 0;
  background: #222222;
}
.playList .title button {
  width: 19.6vh;
  height: 10.4vh;
  background: #333333;
  border-radius: 10vh;
  padding: 0;
  margin: 0;
  border: none;
  transform: translateY(-3vh);
  position: relative;
}
.playList .title button image {
  width: 19.6vh;
  height: 10.4vh;
  position: absolute;
  left: 0;
  top: 0;
}

.noTransform {
  transition: none!important;
  transform: none!important;
}
.wx-progress-bar {
  height: 1.24vh!important;
}
.playGif {
  width: 7.6vh;
  height: 7.6vh;
  margin-left: -5vh;
  /* vertical-align: middle; */
  transform: translateX(2.5vh);
  float: left;
  margin-right: 7.6vh;
}
